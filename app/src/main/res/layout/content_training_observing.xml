                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/block_background"
                    android:paddingBottom="4dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:text="Push-ups"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/block_background_gray"
                    android:paddingBottom="4dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:text="10*3"
                    android:textColor="#fff"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow android:layout_marginBottom="4dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/block_background"
                    android:paddingBottom="4dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:text="Push-ups"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/block_background_gray"
                    android:paddingBottom="4dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:text="10*3"
                    android:textColor="#fff"
                    android:textSize="14sp"/>
            </TableRow>
        </TableLayout>
        <RelativeLayout
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorAccent"
            android:layout_alignBottom="@id/table2"
            android:layout_alignEnd="@id/table2"
            android:layout_alignStart="@id/table2"
            android:layout_alignTop="@id/table2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:background="#fff"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:text="Buy to Unlock the Workout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_arrow_up"
        android:drawablePadding="4dp"
        android:text="Workout C"
        android:textColor="#a30000"
        android:textSize="14sp"/>
