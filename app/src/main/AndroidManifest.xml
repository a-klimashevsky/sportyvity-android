<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.sportivity"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TrainerActivity"
            android:label="@string/title_activity_trainer"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".NewRequestActivity"
            android:label="@string/title_activity_new_request"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".TrainingObservingActivity"
            android:label="@string/title_activity_training_observing"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
